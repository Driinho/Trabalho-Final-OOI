<?xml version="1.0" encoding="UTF-8"?>


<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<VBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="ifpr.pgua.eic.escola.controllers.curso.TelaCadastroCurso"
      >
      
    <VBox styleClass="tela-cadastro">
        <Label text="Código: " />
        <TextField fx:id="campoCodigo" />
        <Label text="Nome: " />
        <TextField fx:id="campoNome" />
        <Label text="Descrição: " />
        <TextField fx:id="campoDescricao" />
        <Label text="Carga Horária: " />
        <TextField fx:id="campoCargaHoraria" />
        <Label text="Professor: " />
        <VBox spacing="30">
            <ComboBox fx:id="comboProfessor" />
            <HBox spacing="10">
                <Button styleClass="btn" text="Cadastrar" onAction="#cadastrar"/>
                <Button styleClass="btn" text="Limpar" onAction="#clear"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>